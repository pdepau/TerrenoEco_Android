<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sensor.SensorFragment">

    <Button
        android:id="@+id/intent_service_start_intent_service2"
        android:layout_width="156dp"
        android:layout_height="80dp"
        android:onClick="botonArrancarServicioPulsado"
        android:text="@string/buscar"
        app:icon="@android:drawable/ic_media_play"
        app:iconGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/intent_service_stop_intent_service2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoVisualMedida2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pibe, arrancÃ¡ el servicio"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intent_service_start_intent_service2" />

    <TextView
        android:id="@+id/textoDistancia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distancia"
        app:layout_constraintBottom_toTopOf="@+id/intent_service_stop_intent_service2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/intent_service_stop_intent_service2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:onClick="botonDetenerServicioPulsado"
        android:text="@string/parar_servicio"
        app:icon="@android:drawable/ic_media_pause"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>